{
  "functions": [
    {
      "source": "functions",
      "codebase": "default"
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/api/ai/lead/run", "function": "leadAgent" },
      { "source": "/api/ai/lead/followup", "function": "followUpAgent" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
